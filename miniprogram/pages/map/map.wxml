  <view class="btn" bindtap="query">
    <image src="../../asset/local.svg"></image>
  </view> -->
</view>
<view class="info_model">
  <view class="info_item">
    <view>发生时间</view>
    <view>{{marker.happenedAt}}</view>
  </view>
  <view class="info_item">
    <view>发生地址</view>
    <view>{{marker.title}}</view>
  </view>
  <view class="info_item">
    <view>附近地址</view>
    <view>{{info.address}}</view>
  </view>
  <view class="info_item">
    <view>行政区</view>
    <view>{{info.adinfo}}</view>
  </view>
</view>