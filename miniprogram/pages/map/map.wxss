/* pages/map-control/map-control.wxss */
.map-control-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background: #F8F8F7;
  width: 100%;
  height: 100%;
}


.map {
  width: 100%;
  height: 100%;
}

.cover-view {
  position: absolute;
  bottom: 80rpx;
  left: 50rpx;
}

.cover-view button {
  background-color: #ffffff;
}

.btn {
  background: #fff;
  margin-top: 10rpx;
  padding: 10rpx 20rpx;
  display: flex;
}

.svg_icon {
  display: inline-flex;
  width: 1em;
  height: 1em;
  overflow: hidden;
}

.svg_icon-inner {
  width: 1em;
  height: 1em;
  transform: translateY(-1em);
  filter: drop-shadow(0 1em 0 currentColor);
}